<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_back"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="返回"
        android:background="#00000000"
        android:textSize="19sp"/>
    <TextView
        android:id="@+id/tv_f_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textSize="37dp"
        android:textColor="#5C4040"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="25dp"/>
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_f_p"
        android:layout_marginTop="35dp">
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:text="问题："
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_q_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:textSize="19sp"
            android:gravity="left|center_vertical"
            android:text="你最喜欢的动漫/电影/影视剧角色叫什么？"
            android:layout_toRightOf="@+id/tv_question"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/rl_1"
        android:layout_marginTop="25dp">
        <TextView
            android:id="@+id/tv_find_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:text="答案："
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_answer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:background="#FBFBFB"
            android:layout_toRightOf="@+id/tv_find_account"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="35dp"
        android:background="@color/gray"/>

    <Button
        android:id="@+id/btn_find_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="21sp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_login"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/v_1"/>
</RelativeLayout>